{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2015",
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@renderer/*": ["renderer/*"],
      "@main/*": ["main/*"]
    }
  },
  "include": ["src/**/*"],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom", "jest", "testing-library__jest-dom"]
  }
}
